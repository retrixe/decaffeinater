{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "npm",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "start",
            "args": ["start"]
        },
        {
            "taskName": "build",
            "args": ["run", "build"]
        },
        {
            "taskName": "debug",
            "args": ["run", "debug"]
        },
        {
            "taskName": "test",
            "args": ["test"]
        }
    ]
}